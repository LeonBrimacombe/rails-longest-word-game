<h1>New game</h1>

<ul class="list-group list-group-horizontal m-4">
  <% @letters.each do |letter| %>
    <li class="list-group-item flex-fill list-group-item-primary m-2"><%=letter%></li>
  <%end%>
</ul>




<div class="container">
  <div class="row col-12 center mx-auto">
    <h4> Your current score is <%= @score %></h4>
    <form action="/score" data-turbo="false" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
      <%= hidden_field_tag :score, @score%>
      <label for="guess">What is the longest word you can find?</label>
      <div class="row col-12">
        <input id="guess" type="text" name="guess" placeholder="Guess anything">
        <input type="submit" value="Guess!">
      </div>
    </form>
  </div>
</div>
